                <!-- سيتم إضافة المنتجات هنا بواسطة JavaScript -->
            </div>
        </div>
    </section>

    <div class="cart-icon" onclick="viewCart()">
        🛒
        <div class="cart-count" id="cartCount">0</div>
    </div>

    <footer class="footer">
