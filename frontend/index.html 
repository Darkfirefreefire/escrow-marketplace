    <script>
        // بيانات المنتجات الوهمية
        const products = [
            {
                id: 1,
                title: "هاتف ذكي متطور",
                price: "2,500 ر.س",
                seller: "متجر التقنية",
                rating: 4.5,
                image: "📱"
            },
            {
                id: 2,
                title: "لابتوب للألعاب",
                price: "4,200 ر.س",
                seller: "عالم الكمبيوتر",
                rating: 4.8,
                image: "💻"
            },
            {
                id: 3,
                title: "ساعة ذكية رياضية",
                price: "850 ر.س",
                seller: "متجر الرياضة",
                rating: 4.3,
                image: "⌚"
            },
            {
                id: 4,
                title: "سماعات لاسلكية",
                price: "320 ر.س",
                seller: "عالم الصوت",
                rating: 4.6,
                image: "🎧"
            },
            {
                id: 5,
                title: "كاميرا احترافية",
                price: "3,800 ر.س",
                seller: "استوديو التصوير",
                rating: 4.9,
                image: "📷"
            },
            {
                id: 6,
                title: "جهاز تابلت",
                price: "1,650 ر.س",
                seller: "متجر التقنية",
                rating: 4.4,
                image: "📱"
            }
        ];

        let cart = JSON.parse(localStorage.getItem('cart')) || [];

        // تحميل المنتجات
        function loadProducts() {
            const productsGrid = document.getElementById('productsGrid');
            productsGrid.innerHTML = '';

            products.forEach(product => {
                const productCard = document.createElement('div');
                productCard.className = 'product-card';
                productCard.innerHTML = `
                    <div class="product-image">${product.image}</div>
                    <div class="product-info">
                        <div class="product-title">${product.title}</div>
                        <div class="product-price">${product.price}</div>
                        <div class="product-seller">بائع: ${product.seller}</div>
                        <div class="product-rating">
                            <span class="stars">${'⭐'.repeat(Math.floor(product.rating))}</span>
                            <span>(${product.rating})</span>
                        </div>
                        <button class="add-to-cart" onclick="addToCart(${product.id})">
                            إضافة للسلة
                        </button>
                    </div>
                `;
                productsGrid.appendChild(productCard);
            });
        }

        // إضافة منتج للسلة
        function addToCart(productId) {
            const product = products.find(p => p.id === productId);
            const existingItem = cart.find(item => item.id === productId);

            if (existingItem) {
                existingItem.quantity += 1;
            } else {
                cart.push({...product, quantity: 1});
            }

            localStorage.setItem('cart', JSON.stringify(cart));
            updateCartCount();
            
            // إشعار بإضافة المنتج
            alert(`تم إضافة "${product.title}" إلى السلة`);
        }

        // تحديث عداد السلة
        function updateCartCount() {
            const totalItems = cart.reduce((sum, item) => sum + item.quantity, 0);
            document.getElementById('cartCount').textContent = totalItems;
        }

        // عرض السلة
        function viewCart() {
            if (cart.length === 0) {
                alert('السلة فارغة');
                return;
            }

            let cartSummary = 'محتويات السلة:\n\n';
            let total = 0;

            cart.forEach(item => {
                const price = parseFloat(item.price.replace(/[^\d.]/g, ''));
                const itemTotal = price * item.quantity;
                cartSummary += `${item.title}\nالكمية: ${item.quantity}\nالسعر: ${item.price}\nالإجمالي: ${itemTotal} ر.س\n\n`;
                total += itemTotal;
            });

            cartSummary += `الإجمالي الكلي: ${total} ر.س`;
            
            if (confirm(cartSummary + '\n\nهل تريد المتابعة للدفع؟')) {
                // التوجه لصفحة الدفع
                alert('سيتم توجيهك لصفحة الدفع (قيد التطوير)');
            }
        }

        // البحث في المنتجات
        function searchProducts() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const filteredProducts = products.filter(product => 
                product.title.toLowerCase().includes(searchTerm) ||
                product.seller.toLowerCase().includes(searchTerm)
            );

            const productsGrid = document.getElementById('productsGrid');
            productsGrid.innerHTML = '';

            if (filteredProducts.length === 0) {
                productsGrid.innerHTML = '<p style="text-align: center; grid-column: 1/-1;">لم يتم العثور على منتجات</p>';
                return;
            }

            filteredProducts.forEach(product => {
                const productCard = document.createElement('div');
                productCard.className = 'product-card';
                productCard.innerHTML = `
                    <div class="product-image">${product.image}</div>
                    <div class="product-info">
                        <div class="product-title">${product.title}</div>
                        <div class="product-price">${product.price}</div>
                        <div class="product-seller">بائع: ${product.seller}</div>
                        <div class="product-rating">
                            <span class="stars">${'⭐'.repeat(Math.floor(product.rating))}</span>
                            <span>(${product.rating})</span>
                        </div>
                        <button class="add-to-cart" onclick="addToCart(${product.id})">
                            إضافة للسلة
                        </button>
                    </div>
                `;
                productsGrid.appendChild(productCard);
            });
        }

        // البحث عند الضغط على Enter
        document.getElementById('searchInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchProducts();
            }
        });

        // تحميل الصفحة
        window.onload = function() {
            loadProducts();
            updateCartCount();
        };
    </script>
</body>
</html>

